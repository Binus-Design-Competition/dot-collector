rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function inSameSession(sessionId) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.sessionId == sessionId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Sessions collection
    match /sessions/{sessionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && 
                      (resource.data.hostId == request.auth.uid || inSameSession(sessionId));
      allow delete: if isAuthenticated() && resource.data.hostId == request.auth.uid;
    }

    // Reviews collection
    match /reviews/{reviewId} {
      allow read: if isAuthenticated() && inSameSession(resource.data.sessionId);
      allow create: if isAuthenticated() && 
                      request.resource.data.reviewerId == request.auth.uid;
      allow update: if isAuthenticated() && 
                      resource.data.reviewerId == request.auth.uid &&
                      resource.data.isEditable == true;
      allow delete: if isAuthenticated() && resource.data.reviewerId == request.auth.uid;
    }
  }
}
